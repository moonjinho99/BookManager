var book_code;
var book_title;
var book_author;
var book_cnt;
var price;
var book_content;

function DeleteBook()
{
	book_code = $("#book_code").val();
	book_title = $("#book_title").val();
	
	$.ajax({
		url:  '/book/deleteBook',
		data: {"book_code" : book_code},
		type: "POST",
		success : function(){
			alert(book_title+"이(가) 삭제되었습니다.");
			location.href="list";
		}
	});

}


function EditMode()
{
	$('#book_title').attr('readonly',true);

}